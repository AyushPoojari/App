WindowManager:
    HomeScreen:
    DataStructureWindow:
    AlgorithmWindow:

    StackWindow:
    StackVisualizer:

    QueueWindow:
    QueueVisualizer:

    LinearSearch:

<HomeScreen>:
    name:"HomeScreen"
    MDBoxLayout:
        md_bg_color: .0, .0, .0, 0
        orientation:'vertical'
        MDToolbar:
            title: 'Visualizer-App'
            anchor_title: 'center'
            md_bg_color: .2,.2,.6, 1
            specific_text_color: 1, 1, 1, 1

        GridLayout:
            cols:1
            rows:3
            MDRaisedButton:
                icon: "android"
                size_hint:.1,.08
                text: "DataStructure"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = "DataStructureWindow"
                    root.manager.transition.direction = "left"

            MDRaisedButton:
                size_hint:.1,.08
                text: "Algorithm Visualization"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = "AlgorithmWindow"
                    root.manager.transition.direction = "left"



        MDToolbar:
            title: 'Bottom'
            anchor_title: 'center'
            md_bg_color: .2,.2,.6, 1
            specific_text_color: 1, 1, 1, 1



<DataStructureWindow>:
    name:"DataStructureWindow"
    MDBoxLayout:
        md_bg_color: .0, .0, .0, 0
        orientation:'vertical'
        MDToolbar:
            title: "DataStructure"
            anchor_title: 'center'
            md_bg_color: .2,.2,.6, 1
            specific_text_color: 1, 1, 1, 1

        GridLayout:
            cols:1
            rows:3
            MDRaisedButton:
                size_hint:1,1
                text: "Stack"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = 'StackWindow'
                    root.manager.transition.direction = 'left'

            MDRaisedButton:
                size_hint:1,1
                text: "Queue"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = 'QueueWindow'
                    root.manager.transition.direction = 'left'

            MDRaisedButton:
                size_hint:1,1
                text: "Back"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = "HomeScreen"
                    root.manager.transition.direction = "right"



<AlgorithmWindow>:
    name:"AlgorithmWindow"

    MDBoxLayout:
        md_bg_color: .0, .0, .0, 0
        orientation:'vertical'

        MDToolbar:
            title: "Algorithm"
            anchor_title: 'center'
            md_bg_color: .2,.2,.6, 1
            specific_text_color: 1, 1, 1, 1

        GridLayout:
            cols:1
            rows:4
            MDRaisedButton:
                size_hint:1,1
                text: "Linear Search"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = 'LinearSearch'
                    root.manager.transition.direction = 'left'

            MDRaisedButton:
                size_hint:1,1
                text: "Binary Search"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1

            MDRaisedButton:
                size_hint:1,1
                text: "PathFinding"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = "t1"
                    root.manager.transition.direction = "left"

            MDRaisedButton:
                size_hint:1,1
                text: "Back"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = "HomeScreen"
                    root.manager.transition.direction = "right"

<StackWindow>:
    name: 'StackWindow'
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:

            title: "Stack"
            anchor_title: 'center'
            md_bg_color: .2,.2,.6, 1
            specific_text_color: 1, 1, 1, 1

        Button:
            background_color: (1, 1,1, 1)
            Image:
                size:'200dp','300dp'
                size_hint: .5,1
                center_x:self.parent.center_x
                center_y:self.parent.center_y
                source:'stack.png'

        MDCard:
            orientation: "vertical"
            size_hint: 1, 1
            padding: "8dp"
            size: "280dp", "400dp"
            pos_hint: {"center_x": .5, "center_y": .5}

            MDSeparator:
                height: "1dp"

            MDLabel:
                md_bg_color: 1, 1, 1, 1
                text_color: .2,.2,.6, 1
                text: "In computer science, a stack is an abstract data type that serves as a collection of elements, with two main principal operations: Push, which adds an element to the collection, and Pop, which removes the most recently added element that was not yet removed."
            MDSeparator:
                height: "1dp"
        GridLayout:
            cols:2
            rows:1
            Button:
                size_hint:0.5,0.5
                size:("100dp","100dp")
                text:"Visualize"
                on_press:
                    app.root.current = 'StackVisualizer'
                    root.manager.transition.direction = 'left'

            Button:
                size_hint: 0.5,0.5
                text:"Back"
                on_press:
                    app.root.current =  'DataStructureWindow'

                    root.manager.transition.direction = 'right'

        MDToolbar:
            title: "Footer Navigation"
            anchor_title: 'center'
            md_bg_color: .2,.2,.6, 1
            specific_text_color: 1, 1, 1, 1

<StackVisualizer>:
    name:'StackVisualizer'
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: "Stack-Visualizer"
            anchor_title:'center'
            md_bg_color: app.theme_cls.accent_color

        BoxLayout:
            orientation:'vertical'
            size_hint:.2,.2
            padding:.2,.2,.2,.2
            spacing:.2
            pos_hint:{'center_x':0.5,'center_y':0.5}
            Button:
                id:9
                background_color:0,0,0,0
            Button:
                id:8
                background_color:0,0,0,0
            Button:
                id:7
                background_color:0,0,0,0
            Button:
                id:6
                background_color:0,0,0,0
            Button:
                id:5
                background_color:0,0,0,0
            Button:
                id:4
                background_color:0,0,0,0
            Button:
                id:3
                background_color:0,0,0,0
            Button:
                id:2
                background_color:0,0,0,0
            Button:
                id:1
                background_color:0,0,0,0
            Button:
                id:0
                background_color:0,0,0,0


        BoxLayout:
            orientation:'horizontal'
            size_hint:.5,.02
            padding:.2,.2,.2,.2
            spacing:.2
            pos_hint:{'center_x':0.5,'center_y':0.5}
            TextInput:
                id:text_input
                text:'Enter data'
                halign:'center'
                valign:'middle'
                multiline:'false'
            Button:
                text:'Push'
                on_press:root.push()
            Button:
                text:'Pop'
                on_press:root.pop()
            Button:
                text:'Peek'
            MDLabel:
                id:l1
                text:''


        MDToolbar:
            title: "Bottom Navigation"
            anchor_title:'center'
            md_bg_color: app.theme_cls.accent_color




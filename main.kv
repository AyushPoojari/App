WindowManager:
    HomeScreen:
    DataStructureWindow:
    AlgorithmWindow:

    StackWindow:
    StackVisualizer:

    QueueWindow:
    QueueVisualizer:

    LinearSearch:

    ArrayWindow:
    ArrayVisualizer:

<HomeScreen>:
    name:"HomeScreen"
    MDBoxLayout:
        md_bg_color: .0, .0, .0, 0
        orientation:'vertical'

        MDToolbar:
            title: 'Visualizer-App'
            anchor_title: 'center'
            icon: 'language-cpp'
            md_bg_color: app.theme_cls.accent_color
            specific_text_color: 1, 1, 1,
            left_action_items: [["menu", lambda x: callback(button),"Home"] ]
            right_action_items: [["dots-vertical", lambda x: app.callback(x), "Settings"]]

        Button:
            text:''
            size_hint:1,.08
            background_color:0,0,0,0

        GridLayout:
            cols:1
            rows:3

            Button:
                size_hint:.1,.08
                text: "DataStructure"
                text_color: app.theme_cls.accent_color
                background_color:(20/255.0,29/255.0,36/255.0,0.9)
                on_press:
                    app.root.current = "DataStructureWindow"
                    root.manager.transition.direction = "left"

            MDSeparator:
                height:"4dp"

            Button:
                size_hint:.1,.08
                text: "Algorithm Visualization"
                text_color: app.theme_cls.accent_color
                background_color:(20/255.0,29/255.0,36/255.0,0.9)
                on_press:
                    app.root.current = "AlgorithmWindow"
                    root.manager.transition.direction = "left"

        Button:
            text:''
            size_hint:1,.08
            background_color:0,0,0,0

        MDToolbar:
            title: ''
            anchor_title: 'center'
            md_bg_color: app.theme_cls.accent_color
            specific_text_color: 1, 1, 1, 1



<DataStructureWindow>:
    name:"DataStructureWindow"
    MDBoxLayout:
        md_bg_color: .0, .0, .0, 0
        orientation:'vertical'
        MDToolbar:
            title: "DataStructure"
            anchor_title: 'center'
            md_bg_color: app.theme_cls.accent_color
            specific_text_color: 1, 1, 1, 1

        MDSeparator:
            height:"10dp"

        GridLayout:
            cols:1
            rows:4

            Button:
                size_hint:1,1
                text: "Stack"
                text_color: .2,.2,.6, 1
                background_color:(20/255.0,29/255.0,36/255.0,0.8)
                on_press:
                    app.root.current = 'StackWindow'
                    root.manager.transition.direction = 'left'


            Button:
                size_hint:1,1
                text: "Queue"
                background_color:(20/255.0,29/255.0,36/255.0,0.8)
                text_color: .2,.2,.6, 1
                on_press:
                    app.root.current = 'QueueWindow'
                    root.manager.transition.direction = 'left'

            Button:
                size_hint:1,1
                text: "Array"
                background_color:(20/255.0,29/255.0,36/255.0,0.8)
                text_color: .2,.2,.6, 1
                on_press:
                    app.root.current = 'ArrayWindow'
                    root.manager.transition.direction = 'left'
        MDSeparator:
            height:"10dp"

        Button:
            size_hint:0.2,0.1
            pos_hint:{'center_x':0.5,'center_y':0.5}
            text: "Back"
            text_color: .2,.2,.6, 1
            background_color:(20/255.0,29/255.0,36/255.0,0.9)
            on_press:
                app.root.current = "HomeScreen"
                root.manager.transition.direction = "right"
        MDSeparator:
            height:"10dp"

        MDToolbar:
            title: " "
            anchor_title: 'center'
            md_bg_color: app.theme_cls.accent_color
            specific_text_color: 1, 1, 1, 1


<AlgorithmWindow>:
    name:"AlgorithmWindow"

    MDBoxLayout:
        md_bg_color: .0, .0, .0, 0
        orientation:'vertical'
        MDToolbar:
            title: "Algorithm"
            anchor_title: 'center'
            md_bg_color: .2,.2,.6, 1
            specific_text_color: 1, 1, 1, 1
        GridLayout:
            cols:1
            rows:4
            MDRaisedButton:
                size_hint:1,1
                text: "Linear Search"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = 'LinearSearch'
                    root.manager.transition.direction = 'left'

            MDRaisedButton:
                size_hint:1,1
                text: "Binary Search"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1

            MDRaisedButton:
                size_hint:1,1
                text: "PathFinding"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = "t1"
                    root.manager.transition.direction = "left"

            MDRaisedButton:
                size_hint:1,1
                text: "Back"
                text_color: .2,.2,.6, 1
                md_bg_color: 1, 1, 1, 1
                on_press:
                    app.root.current = "HomeScreen"
                    root.manager.transition.direction = "right"

<StackWindow>:
    name: 'StackWindow'
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Stack"
            anchor_title: 'center'
            md_bg_color: app.theme_cls.accent_color
            specific_text_color: 1, 1, 1, 1

        FitImage:
            pos_hint:{"centre_x":0.5,"centre_y":0.5}
            size_hint:1,1
            source: 'Stack.png'

        MDCard:
            orientation: "vertical"
            size_hint: 1, 2
            padding: "8dp"
            size: "280dp", "400dp"
            pos_hint: {"center_x": .5, "center_y": .5}

            MDSeparator:
                height: "2dp"

            MDLabel:
                md_bg_color: 1, 1, 1, 1
                text_color: .2,.2,.6, 1
                font_size:15
                text: "In computer science, a stack is an abstract data type that serves as a collection of elements, with two main principal operations: Push, which adds an element to the collection, and Pop, which removes the most recently added element that was not yet removed.Basic Operations \nStack operations may involve initializing the stack, using it and then de-initializing it. Apart from these basic stuffs, a stack is used for the following two primary operations\n1.Push\n2.Pop"


        BoxLayout:
            Button:
                size_hint:0.5,0.5
                text:"Visualize"
                background_color:(20/255.0,29/255.0,36/255.0,0.9)
                on_press:
                    app.root.current = 'StackVisualizer'
                    root.manager.transition.direction = 'left'

            Button:
                size_hint: 0.5,0.5
                text:"Back"
                background_color:(20/255.0,29/255.0,36/255.0,0.9)
                on_press:
                    app.root.current =  'DataStructureWindow'
                    root.manager.transition.direction = 'right'

        MDToolbar:
            title: " "
            anchor_title: 'center'
            md_bg_color: app.theme_cls.accent_color
            specific_text_color: 1, 1, 1, 1

<StackVisualizer>:
    name:'StackVisualizer'
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: "Stack-Visualizer"
            anchor_title:'center'
            md_bg_color: app.theme_cls.accent_color

        MDSeparator:
            height:"20dp"
            background_color:(20/255.0,29/255.0,36/255.0,0.9)

        BoxLayout:
            orientation:'vertical'
            size_hint:.2,.2
            padding:.2,.2,.2,.2
            spacing:.2
            pos_hint:{'center_x':0.5,'center_y':0.5}
            Button:
                id:9
                background_color:0,0,0,0
            Button:
                id:8
                background_color:0,0,0,0
            Button:
                id:7
                background_color:0,0,0,0
            Button:
                id:6
                background_color:0,0,0,0
            Button:
                id:5
                background_color:0,0,0,0
            Button:
                id:4
                background_color:0,0,0,0
            Button:
                id:3
                background_color:0,0,0,0
            Button:
                id:2
                background_color:0,0,0,0
            Button:
                id:1
                background_color:0,0,0,0
            Button:
                id:0
                background_color:0,0,0,0

        MDSeparator:
            height:"20dp"

        MDLabel:
            size_hint:1,.02
            text:'Operation:'

        MDLabel:
            size_hint:1,.02
            id:l1
            text:''

        BoxLayout:
            orientation:'horizontal'
            size_hint:.5,.02
            padding:.2,.2,.2,.2
            spacing:.2
            pos_hint:{'center_x':0.5,'center_y':0.5}
            TextInput:
                id:text_input
                text:''
                halign:'center'
                valign:'middle'
                multiline:'false'
            Button:
                text:'Push'
                on_press:root.push()
            Button:
                text:'Pop'
                on_press:root.pop()
            Button:
                text:'Peek'
            Button:
                text:'Back'
                on_press:
                    app.root.current =  'StackWindow'
                    root.manager.transition.direction = 'right'

        MDToolbar:
            title: ""
            anchor_title:'center'
            md_bg_color: app.theme_cls.accent_color






